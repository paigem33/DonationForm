<services>
    <service verb="create" noun="DemoForm" type="inline" allow-remote="true" authenticate="anonymous-all">
        <in-parameters>
            <parameter name="firstName" required="true"/>
            <parameter name="middleInitial"/>
            <parameter name="lastName"/>
        </in-parameters>
        <out-parameters>
        </out-parameters>
        <actions>
            <set field="middleName" from="middleInitial"/>
            <service-call name="mantle.party.PartyServices.create#Person" in-map="context" out-map="context"/>
        </actions>
    </service>

    <service verb="add" noun="nickname" type="java" location="com.mk.moqui.NicknameService" method="makeNickname">
        <in-parameters>
            <parameter name="firstName"/>
        </in-parameters>
    </service>
</services>