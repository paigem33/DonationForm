<?xml version="1.0" encoding="UTF-8"?>

<screen require-authentication="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd">

    <transition name="createPerson" require-session-token="false" method="post">
    <!-- <log message="******************** Transition hit ********************"/> -->
        <service-call name="ExampleServices.create#Person" in-map="context" out-map="context"/>
        <default-response url="."/>
    </transition>

    <actions>
    </actions>

    <transition name="json" method="options" require-session-token="false">
        <default-response type="none" />
    </transition>

    <widgets>
        <render-mode><text type="html,vuet" location="component://moqui-org/screen/moqui.org/includes/headerSecondary.html.ftl" no-boundary-comment="true"/></render-mode>

         <render-mode>
            <text type="html,vuet" location="component://DonationForm/template/DonateForm.html.ftl"/>
        </render-mode>

        <render-mode><text type="html,vuet" location="component://moqui-org/screen/moqui.org/includes/footerSecondary.html.ftl"/></render-mode>
    </widgets>
</screen> 