<?xml version="1.0" encoding="UTF-8"?>

<screen require-authentication="anonymous-all"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd">

    <transition name="createDonateForm" require-session-token="false" method="post" >
        <service-call name="ExampleServices.create#DonateForm" in-map="context" out-map="context"/>
        <actions>
        </actions>
        <default-response url="none"/>
    </transition>

    <transition name="json" method="options" require-session-token="false">
        <default-response type="none" />
    </transition>

    <widgets>
        <render-mode>
            <text type="html,vuet" location="component://DonationForm/template/DonateForm.html.ftl"/>
        </render-mode>
    </widgets>
</screen>
